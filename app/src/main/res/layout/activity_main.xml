<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mathexercise.MainActivity">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mathexercise.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math Exercises"
        android:layout_gravity="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topText"
            android:layout_width="180dp"
            android:layout_height="88dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/material_dynamic_neutral30"
            android:gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="30dp"></TextView>

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="rate"
            android:textSize="15dp"
            android:id="@+id/rate"
            android:layout_gravity="right"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        tools:context=".mathexercise.MainActivity">

        <Button
            android:layout_width="130dp"
            android:layout_height="88dp"
            android:id="@+id/tableButt"
            android:layout_marginRight="5dp"
            android:text="Multiplation Table"></Button>

        <Button
            android:layout_width="130dp"
            android:layout_height="88dp"
            android:id="@+id/tillButt"
            android:layout_marginRight="5dp"
            android:text="Multiply up till 20"></Button>

        <Button
            android:id="@+id/etgarButt"
            android:layout_width="130dp"
            android:layout_height="88dp"
            android:text="challenge"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mathexercise.MainActivity"
        android:orientation="vertical">

        <TextView
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:id="@+id/firstView"
            android:textSize="30dp"
            android:textColor="@color/cardview_light_background"
            android:background="@color/material_dynamic_neutral30"
            android:layout_gravity="center_horizontal"></TextView>

        <Button
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:id="@+id/cafolButt"
            android:layout_gravity="center_horizontal"
            android:text="X"
            android:textSize="30dp"></Button>

        <TextView
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:id="@+id/secondView"
            android:layout_marginBottom="5dp"
            android:textSize="30dp"
            android:textColor="@color/cardview_light_background"
            android:background="@color/material_dynamic_neutral30"
            android:layout_gravity="center_horizontal"></TextView>

        <EditText
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:id="@+id/awnser"
            android:textSize="30dp"
            android:background="@color/black"
            android:textColor="@color/cardview_light_background"
            android:hint="awnser"
            android:textColorHint="@color/cardview_light_background"
            android:layout_gravity="center_horizontal"></EditText>

        <Button
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:text="check"
            android:id="@+id/checkBox"
            android:layout_gravity="center_horizontal"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/save"
            android:text="SAVE"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/showAll"
            android:text="SHOW ALL USERS"></Button>


    </LinearLayout>

</LinearLayout>

</FrameLayout>